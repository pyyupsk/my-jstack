    "drizzle-kit": "^0.31.0",
    "eslint": "^9.25.0",
    "eslint-config-next": "^15.3.1",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-drizzle": "^0.2.3",
    "eslint-plugin-perfectionist": "^4.11.0",
