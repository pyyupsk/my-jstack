    "clsx": "^2.1.1",
    "drizzle-orm": "^0.42.0",
    "hono": "^4.7.7",
    "jstack": "^1.1.1",
    "lucide-react": "^0.501.0",
    "next": "^15.3.1",
    "next-themes": "^0.4.6",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-wrap-balancer": "^1.1.1",
    "sonner": "^2.0.3",
