{
  "name": "my-jstack",
  "version": "0.1.0",
  "private": true,
  "packageManager": "bun@1.0.0",
  "scripts": {
    "build": "dotenvx run -- next build",
    "db:generate": "dotenvx run -- drizzle-kit generate",
    "db:migrate": "dotenvx run -- drizzle-kit migrate",
    "db:push": "dotenvx run -- drizzle-kit push",
    "db:studio": "dotenvx run -- drizzle-kit studio",
    "dev": "dotenvx run -- next dev --turbo",
    "format": "prettier --write . --list-different --cache",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "server:deploy": "wrangler deploy",
    "server:dev": "wrangler dev",
    "start": "dotenvx run -- next start"
